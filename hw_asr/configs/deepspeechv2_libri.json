{
  "name": "baseline",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
        {
            "type": "PitchShift",
            "args":{
                "p": 0.25,
                "sample_rate": 16000
            }
        },
        {
            "type": "Gain",
            "args": {
                "p": 0.25,
                "sample_rate": 16000
            }
        }
    ],
    "spectrogram": [
        {
            "type": "TimeStretch",
            "args": {
                "p": 0.25,
                "min_stretch": 0.5,
                "max_stretch": 1.1,
                "n_freq": 128
            }
        },
        {
            "type": "FrequencyMasking",
            "args": {
                "p": 0.25,
                "freq_mask_param": 20
            }
        }
    ]
  },
  "arch": {
    "type": "DeepSpeechV2Model",
    "args": {
      "n_feats": 128,
      "fc_hidden": 512,
      "n_channels": [32, 32],
      "kernel_size": [[11, 41], [11, 21]],
      "stride": [[2, 2], [1, 2]],
      "n_layers": 5
    }
  },
  "data": {
    "train": {
        "batch_size": 40,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "train-clean-100",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          },
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "train-clean-360",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          }
        ]
    },
    "val": {
        "batch_size": 40,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "dev-clean",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          }
        ]
    },
    "test-other": {
        "batch_size": 40,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "test-other",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          }
        ]
    },
    "test-clean": {
        "batch_size": 40,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "test-clean"
            }
          }
        ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 3e-3,
      "weight_decay": 1e-5
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
        "type": "ArgmaxWERMetric",
        "args": {
          "name": "WER (argmax)"
        }
    },
    {
        "type": "ArgmaxCERMetric",
        "args": {
          "name": "CER (argmax)"
        }
    },
    {
      "type": "BeamSearchWERMetric",
      "args": {
        "name": "WER (beam)",
        "beam_size": 3
      }
    },
    {
      "type": "BeamSearchCERMetric",
      "args": {
        "name": "CER (beam)",
        "beam_size": 3
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 150,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 2e-2,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 50,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "run_name": "LJ_train",
    "sample_rate": 16000,
    "len_epoch": 150,
    "grad_norm_clip": 10
  }
}
